<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sequence %>
    <%= f.input :first %>
    <%= f.input :second %>
    <%= f.input :third %>
    <%= f.input :fourth %>
    <%= f.input :fifth %>
    <%= f.input :sixth %>
    <%= f.input :bonus %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
